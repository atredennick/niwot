journal = {Ecological Monographs},
keywords = {Carlina vulgaris,Evolutionarily stable strategies,Function-valued traits,Integral projection model,Life table response experiment,Mixedmodels,Population forecasting,Random environment,Sensitivity analysis,Stochastic growth rate,Structured population,Temporal variability},
